<view class="cu-bar bg-white solid-bottom">
  <view class='action'>
    <text class='cuIcon-titles text-orange '></text>
    <text>{{phone}}</text>
  </view>
  <view class='action' wx:if="{{phone}}">
    <button class='cu-btn bg-olive' bindtap='callCar'>呼叫车主</button>
  </view>
</view>

<view class="cu-card case no-card">
  <view class="cu-item shadow padding-bottom">
    <view class="image">
      <image src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg" mode="widthFix"></image>
      <view class="cu-tag bg-blue">史诗</view>
      <view class="cu-bar bg-shadeBottom">
        <text class="text-cut">{{memo}}</text>
      </view>
    </view>
  </view>
</view>